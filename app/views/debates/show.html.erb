<div class="container">
  <div>
    <%= link_to 'Edit', edit_debate_path(@debate) %> |
    <%= link_to 'Remove', debate_path(@debate), method: :delete, confirm: 'Are you sure?' %>
    <h1><%= @debate.title %></h1>
	<h4><%= @debate.summary %></h4>
  </div>



  <div class="row-fluid">
    <div class='span6'>
      <h2>For</h2>
      <ul>
        <% @debate.points.where(supporting: true).each do |point| %>
          <li>
            <%= link_to point.evidence.title, evidence_url(point.evidence) %>
            <div class='pull-right offset1'>
              Total Votes: <%= point.plusminus %> |
              <%= link_to 'Up Vote', vote_up_point_url(point), method: :post %> |
              <%= link_to "Delete", point_url(point), method: :delete, confirm: 'Are you sure?' %>
            </div>
          </li>
        <% end %>
      </ul>
	  <%= link_to 'For Point', new_evidence_url({debate_id: @debate.id, supporting: true}), class: 'btn' %>
    </div>
    <div class='span6'>
      <h2>Against</h2>
      <ul>
        <% @debate.points.where(supporting: false).each do |point| %>
          <li>
            <%= link_to point.evidence.title, evidence_url(point.evidence) %>
            <div class='pull-right'>
              Total Votes: <%= point.plusminus %> |
              <%= link_to 'Up Vote', vote_up_point_url(point), method: :post %> |
              <%= link_to "Delete", point_url(point), method: :delete, confirm: 'Are you sure?' %>
            </div>
          </li>
        <% end %>
      </ul>
	  	  <%= link_to 'Against Point', new_evidence_url({debate_id: @debate.id, supporting: false}), class: 'btn' %>
    </div>
  </div>
</div>

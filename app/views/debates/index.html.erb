<div class="container-fluid">
  <div class="row-fluid">
    <div class="span9">
      <div class="hero-unit">
        <h1>Welcome to Credominion!</h1>
        <p>Where evidence matters</p>
        <p><a class="btn btn-primary btn-large">Learn more &raquo;</a></p>
      </div>
      <div class="row-fluid">
        <div class="span8 offset1">
          <%= link_to 'Add a debate', new_debate_url, class: 'btn' %>
          <h2>Debates</h2>
          <div class='span6'>
            <% @debates.each do |debate| %>
              <%= link_to debate.title, debate_url(debate) %>
            <% end %>
          </div>
        </div>
      </div><!--/row-->
    </div><!--/span-->
    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Sidebar</li>
          <li><%= link_to "All Sources", sources_url %></li>
          <li><%= link_to "All Users", users_url %></li>
        </ul>
      </div><!--/.well -->
    </div>
  </div><!--/row-->

  <hr>

  <footer>
    <p>&copy; ProjectCredo 2012</p>
  </footer>

</div><!--/.fluid-container-->


<div class="container-fluid">
  <div class="row-fluid">
    <div class="span9 offset1">
      <h1>New Debate</h1>
      <div class="field span12">
        <%= form_for @debate do |f| %>
        <%= f.error_message_on 'title', prepend_text: 'Title ' %>
        <%= f.error_message_on 'summary', prepend_text: 'Summary ' %>
        <%= f.text_field :title, :placeholder => "Title.." %>
      </div>
      <div class="span12">
        <%= f.text_area :summary, :placeholder => "Summary.." %>
      </div>
        <%= f.submit "Submit", :class => 'btn' %>
       <% end %>
    </div>
  </div>
</div>


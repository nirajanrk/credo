<div class="container-fluid">
  <div class="row-fluid">
    <div class="span9 offset1">
      <h1>Source</h1>
      <%= nested_form_for setup_source(@source) do |f| %>
        <%= f.error_message_on 'title', prepend_text: 'Title ' %>
        <%= f.text_field :title, :placeholder => "Title.." %>
        <div>
          <p>Authors</p>
          <%= f.fields_for :authors do |builder| %>

            <%= builder.error_message_on 'first_name', prepend_text: 'First name ' %>
            <%= builder.text_field :first_name, :placeholder => "First Name.."%>

            <%= builder.error_message_on 'last_name', prepend_text: 'Last name ' %>
            <%= builder.text_field :last_name, :placeholder => "Last Name.."%>
          <% end %>
          <p><%= f.link_to_add 'Add an author', :authors%></p>
        </div>

        <%= f.text_field :citation_count, :placeholder => "Citation count.." %>
        <br />
        <%= f.text_area :description, :rows => 3, :placeholder => "Description.." %>
        <br />
        <%= f.text_field :journal, :placeholder => "Publication.." %>
        <%= f.text_field :year, :placeholder => "Publication year ie:1998" %>
        <br />
        <%= f.text_field :url, :placeholder => "Link..ie:tinyurl.com/nutinyhouse" %>
        <br />

        <%= f.submit "Submit", :class => 'btn' %>
      <% end %>
    </div>
  </div>
</div>


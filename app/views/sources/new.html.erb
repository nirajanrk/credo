<div class="container-fluid">
  <div class="row-fluid">
  <div class="span1"></div><!--/span-->
    <div class="span9">

      <h1>For Source</h1>
          <legend>Facts are stubborn things; and whatever may be our wishes, our inclinations, or the dictates of our passions, they cannot alter the state of facts and evidence.
          -John Adams</legend>

    <%= form_for setup_source(@source) do |f| %>
      <%= f.text_field :title, :placeholder => "Title.." %>

        <%= f.fields_for :authors do |builder| %>
        <%= builder.label :firstname, "Author" %>
        <%= builder.text_field :firstname, :placeholder => "First Name.."%>
        <%= builder.text_field :lastname, :placeholder => "Last Name.."%>

      <%end%>
         <br />
        <%= f.text_field :citation, :placeholder => "Citations..ie:25" %> <br />
        <%= f.text_area :description, :rows => 3, :placeholder => "Description.." %> <br />
        <%= f.text_field :journal, :placeholder => "Publication.." %><br />
        <%= f.text_field :year, :placeholder => "Publication year ie:1998" %><br />
        <%= f.text_field :url, :placeholder => "Link..ie:tinyurl.com/nutinyhouse" %><br />


    <%= f.submit "Submit", :class => 'btn' %>


   <% end %>


  </div>
  </div>
</div>


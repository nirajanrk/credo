<div class="container-fluid">
  <div class="row-fluid">
  <div class="span1"></div><!--/span-->
    <div class="span9">
        <h1>For Source</h1>
          <legend>Good Submission!</legend>

          <legend><%= @source.title %></legend>
        <p>
        <strong>Citations:</strong>
        <%= @source.citation %>
        <strong>Link:</strong>
        <%= @source.url %>
          <p>
          <strong>Description:</strong>
          <%= @source.description %>
          </p>
        </p>
        <ol>
        <% @source.authors.each  do |author|%>
        <li>First Name: <%= author.first_name%> Last Name:<%= author.last_name%></li>
        <% end %>
        </ol>


  </div>
  </div>
</div>
